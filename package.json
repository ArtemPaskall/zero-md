{
  "name": "zero-md",
  "version": "2.3.4",
  "description": "Ridiculously simple zero-config markdown displayer",
  "author": "Jason Lee <jason@zerodevx.com>",
  "type": "module",
  "exports": "./src/index.js",
  "scripts": {
    "dev": "rollup -c -w",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "npm run dev",
    "build": "rollup -c",
    "prepublishOnly": "npm run format && npm run lint && npm run build",
    "docs:build": "zero-md-docs && sscli -b https://zerodevx.github.io/zero-md/ -r docs -i 'v1/**' --slash"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^4.0.0",
    "chai": "^4.3.6",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "mocha": "^9.2.2",
    "prettier": "^2.6.0",
    "rollup": "^2.70.1",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "static-sitemap-cli": "^2.1.2",
    "zero-md-docs": "^0.1.3"
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "files": [
    "src/",
    "dist/"
  ],
  "license": "ISC",
  "repository": "github:zerodevx/zero-md",
  "homepage": "https://zerodevx.github.io/zero-md/",
  "keywords": [
    "webcomponents",
    "customelements",
    "markdown-to-html",
    "marked",
    "prism"
  ]
}
