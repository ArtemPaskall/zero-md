{
  "name": "zero-md",
  "version": "2.3.3",
  "description": "Ridiculously simple zero-config markdown displayer",
  "author": "Jason Lee <jason@zerodevx.com>",
  "type": "module",
  "exports": "./src/index.js",
  "scripts": {
    "dev": "rollup -c -w",
    "test": "npm run dev",
    "lint": "standard --plugin html '**/*.{js,cjs,html}' | snazzy",
    "build:docs": "zero-md-docs && sscli -b https://zerodevx.github.io/zero-md/ -r docs -i 'v1/**' --slash",
    "build": "rollup -c",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "devDependencies": {
    "@babel/core": "^7.17.2",
    "@babel/preset-env": "^7.16.11",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^3.1.0",
    "chai": "^4.3.6",
    "eslint-plugin-html": "^6.2.0",
    "mocha": "^9.2.0",
    "rollup": "^2.67.2",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "snazzy": "^9.0.0",
    "standard": "^16.0.4",
    "static-sitemap-cli": "^2.1.1",
    "zero-md-docs": "^0.1.1"
  },
  "standard": {
    "ignore": [
      "test/build/",
      "dist/",
      "docs/v1/"
    ],
    "globals": [
      "HTMLElement",
      "customElements",
      "CustomEvent",
      "fetch",
      "location",
      "requestAnimationFrame",
      "chai",
      "MutationObserver"
    ]
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "files": [
    "src/",
    "dist/"
  ],
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zerodevx/zero-md.git"
  },
  "bugs": {
    "url": "https://github.com/zerodevx/zero-md/issues"
  },
  "homepage": "https://zerodevx.github.io/zero-md/",
  "keywords": [
    "webcomponents",
    "customelements",
    "markdown-to-html",
    "marked",
    "prism"
  ]
}
